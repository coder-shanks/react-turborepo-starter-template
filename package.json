{
	"name": "react-turbo-monorepo-starter",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint:format": "turbo run lint:format",
		"docker:build:api": "docker build -f apps/api/Dockerfile -t react-turbo-api:latest .",
		"docker:build:web": "docker build -f apps/web/Dockerfile -t react-turbo-web:latest .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.2",
		"husky": "^9.1.7",
		"turbo": "^2.8.9",
		"typescript": "5.9.2"
	},
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=18"
	}
}
